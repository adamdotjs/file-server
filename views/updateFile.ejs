<%- include("partials/header.ejs") %>

<div>
  <h1>Update file for Part <%= file.id %></h1>
  <form
    method="POST"
    action="/files/update/<%= file.id %>"
    enctype="multipart/form-data"
  >
    <label>
      <span>Customer ID</span>
      <input
        required
        type="text"
        name="customer"
        id="customer"
        value="<%= file.customer %>"
      />
    </label>
    <label>
      <span>Description</span>
      <input
        required
        type="text"
        name="description"
        id="description"
        value="<%= file.description %>"
      />
    </label>
    <label>
      <span>Revision Number</span>
      <input
        required
        type="text"
        name="addlDesc"
        id="addlDesc"
        value="<%= file.addlDesc %>"
      />
    </label>
    <label>
      <span>Colors (front)</span>
      <input
        required
        type="text"
        name="minOrderQty"
        id="minOrderQty"
        value="<%= file.minOrderQty %>"
      />
    </label>
    <label>
      <span>Colors (back)</span>
      <input
        required
        type="text"
        name="maxOrderQty"
        id="maxOrderQty"
        value="<%= file.maxOrderQty %>"
      />
    </label>
    <label>
      <span>Ink Requirements</span>
      <input
        required
        type="text"
        name="briefDescription"
        id="briefDescription"
        value="<%= file.briefDescription %>"
      />
    </label>
    <label>
      <span>Die Number (optional)</span>
      <input
        type="text"
        name="displayAsDesc"
        id="displayAsDesc"
        value="<%= file.displayAsDesc %>"
      />
    </label>
    <label>
      <span>Preview Image</span>
      <input required type="file" name="thumbnail" id="thumbnail" />
    </label>
    <label>
      <span>New Print File</span>
      <input required type="file" name="document" id="document" />
    </label>
    <button>Submit Changes</button>
  </form>
</div>

<%- include("partials/footer.ejs") %>
