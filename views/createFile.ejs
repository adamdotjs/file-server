<%- include("partials/header.ejs") %>

<div>
  <h1>Add new file</h1>
  <form method="POST" action="/files/create" enctype="multipart/form-data">
    <label>
      <span>Customer ID</span>
      <input required type="text" name="customer" id="customer" />
    </label>
    <label>
      <span>Part Number</span>
      <input required type="text" name="id" id="id" />
    </label>
    <label>
      <span>Description</span>
      <input required type="text" name="description" id="description" />
    </label>
    <label>
      <span>Revision Number</span>
      <input required type="text" name="addlDesc" id="addlDesc" />
    </label>
    <label>
      <span>Colors (front)</span>
      <input required type="text" name="minOrderQty" id="minOrderQty" />
    </label>
    <label>
      <span>Colors (back)</span>
      <input required type="text" name="maxOrderQty" id="maxOrderQty" />
    </label>
    <label>
      <span>Ink Requirements</span>
      <input
        required
        type="text"
        name="briefDescription"
        id="briefDescription"
      />
    </label>
    <label>
      <span>Die Number (optional)</span>
      <input type="text" name="displayAsDesc" id="displayAsDesc" />
    </label>
    <label>
      <span>Preview Image</span>
      <input required type="file" name="thumbnail" id="thumbnail" />
    </label>
    <label>
      <span>New Print File</span>
      <input required type="file" name="document" id="document" />
    </label>
    <button>Add File</button>
  </form>
</div>

<%- include("partials/footer.ejs") %>
